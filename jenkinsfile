pipeline {
  agent any

  environment {
    SONAR_HOST_URL = 'http://sonarqube:9000'
    SONAR_TOKEN = credentials('sonar-token-id')
    SONAR_PROJECT_KEY = 'Task-Manager-Backend'
  }

  stages {
    stage('Checkout') {
      steps {
        echo 'ğŸ“¦ Clonando repositÃ³rio do GitHub...'
        checkout scm
      }
    }

    stage('Build & Test') {
      steps {
        dir('backend') {
          echo 'ğŸ”¨ Compilando e testando o projeto...'
          sh 'mvn clean verify'
        }
      }
    }

    stage('SonarQube Analysis') {
      steps {
        dir('backend') {
          echo 'ğŸ“Š Enviando anÃ¡lise para o SonarQube...'
          withSonarQubeEnv('SonarQube Server') {
            sh """
              mvn sonar:sonar \
                -Dsonar.host.url=${SONAR_HOST_URL} \
                -Dsonar.token=${SONAR_TOKEN}
            """
          }
        }
      }
    }

    stage('Quality Gate') {
      steps {
        echo 'ğŸ¯ Aguardando Quality Gate do SonarQube...'
        timeout(time: 5, unit: 'MINUTES') {
          waitForQualityGate abortPipeline: true
        }
      }
    }
  }

  post {
    success {
      echo 'âœ… Pipeline executada com sucesso!'
      echo "ğŸ“Š RelatÃ³rio SonarQube: http://localhost:9000/dashboard?id=${SONAR_PROJECT_KEY}"
    }
    failure {
      echo 'âŒ Pipeline falhou! Verifique os logs acima.'
    }
    always {
      echo 'ğŸ§¹ Limpeza concluÃ­da.'
    }
  }
}